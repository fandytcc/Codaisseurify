<div class="row">
<!-- artist's photo -->
  <div class="col-md-6 col-md-4">
    <div class="thumbnail">
      <img src="https://picsum.photos/350/350/?random" alt="random image">
    </div>
  </div>

<!-- Artist's main info -->
  <div class="col-sm-4 col-md-4">
    <div class="caption">
      <h3><label for="first_name"> First Name: <%= @artist.first_name %></h3>
      <h4><label for="last_name"> Last Name: <%= @artist.last_name %></h4>
      <p><label for="bio"> Bio: </label> <%= @artist.bio %></p>

<!-- List of songs -->
      <h3>List of Songs</h3>
      <% if @artist.songs.any? %>
        <ul>
          <% @artist.songs.each do |song| %>
            <li><%= song.title %></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no songs for this artist.</p>
      <% end %>
    </div>
  </div>
</div>
  <hr/>

<%= link_to "BACK", artists_path, class: "btn btn-info"%></p>
